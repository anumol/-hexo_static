<div class="comment-section">
  <% if (page.comments){ %>
    <% if (theme.disqus_shortname){ %>
   <div id="disqus_thread"></div>
    <script>
    /**
    * RECOMMENDED CONFIGURATION VARIABLES: EDIT AND UNCOMMENT THE SECTION BELOW TO INSERT DYNAMIC VALUES FROM YOUR PLATFORM OR CMS.
    * LEARN WHY DEFINING THESE VARIABLES IS IMPORTANT: https://disqus.com/admin/universalcode/#configuration-variables
    */
   window.disqusConfig={
    url : '<%= page.permalink %>',
    identifier:'<%=page.source%>'
   }

    var disqus_config = function () {
    this.page.url = '<%= page.permalink %>'; // Replace PAGE_URL with your page's canonical URL variable
    this.page.identifier = '<%=page.source%>'; // Replace PAGE_IDENTIFIER with your page's unique identifier variable
    };
    
    </script>
    <script src="//<%= theme.disqus_shortname %>.disqus.com/embed.js"></script>

  <% } else if(theme.duoshuo_shortname) { %>
   <div id="duoshuoContainer">
     <!-- 多说评论框 start -->
    <div class="ds-thread" id="ds-thread" data-thread-key="<%=page.source%>" data-title="<%= page.title %>" data-url="<%= page.permalink %>"></div>
    <!-- 多说评论框 end -->
   <!-- 多说公共JS代码 start (一个网页只需插入一次) -->
    <script type="text/javascript">
      var duoshuoQuery = {short_name:'<%= theme.duoshuo_shortname %>'};
    </script>
    <script src="//static.duoshuo.com/embed.js"></script>
    <!-- 多说公共JS代码 end -->
   </div>
  <% } %>
<% } %>

</div>